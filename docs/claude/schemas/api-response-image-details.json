{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://picturemodel.com/schemas/api-response-image-details.json",
  "title": "ImageDetailsDto",
  "description": "Detailed DTO for image detail view with full metadata",
  "type": "object",
  "required": ["id", "driveId", "driveName", "fileName", "filePath", "fullPath", "fileSize", "fileHash", "mimeType", "imageUrl", "thumbnailUrl", "indexedDate"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the image"
    },
    "driveId": {
      "type": "string",
      "format": "uuid",
      "description": "ID of the drive this image is stored on"
    },
    "driveName": {
      "type": "string",
      "description": "Name of the drive"
    },
    "fileName": {
      "type": "string",
      "description": "Original file name",
      "maxLength": 500
    },
    "filePath": {
      "type": "string",
      "description": "Relative path on the drive",
      "maxLength": 2000
    },
    "fullPath": {
      "type": "string",
      "description": "Complete path (drive root + relative path)",
      "maxLength": 3000
    },
    "fileSize": {
      "type": "integer",
      "description": "File size in bytes",
      "minimum": 0
    },
    "fileHash": {
      "type": "string",
      "description": "SHA-256 hash of the file",
      "pattern": "^[a-f0-9]{64}$"
    },
    "mimeType": {
      "type": "string",
      "description": "MIME type of the image"
    },
    "width": {
      "type": "integer",
      "description": "Image width in pixels",
      "minimum": 1
    },
    "height": {
      "type": "integer",
      "description": "Image height in pixels",
      "minimum": 1
    },
    "imageUrl": {
      "type": "string",
      "description": "URL to full-size image"
    },
    "thumbnailUrl": {
      "type": "string",
      "description": "URL to thumbnail image"
    },
    "capturedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the image was captured (from EXIF)"
    },
    "createdDate": {
      "type": "string",
      "format": "date-time",
      "description": "File creation timestamp"
    },
    "modifiedDate": {
      "type": "string",
      "format": "date-time",
      "description": "File modification timestamp"
    },
    "indexedDate": {
      "type": "string",
      "format": "date-time",
      "description": "When the image was indexed"
    },
    "metadata": {
      "type": "array",
      "description": "All metadata associated with this image",
      "items": {
        "$ref": "api-response-image-metadata.json"
      }
    },
    "tags": {
      "type": "array",
      "description": "Tags associated with this image",
      "items": {
        "$ref": "api-response-tag.json"
      }
    }
  },
  "additionalProperties": false
}
