{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://picturemodel.com/schemas/api-request-add-tags.json",
  "title": "AddTagsRequest",
  "description": "Request body for adding tags to an image",
  "type": "object",
  "required": ["tagIds"],
  "properties": {
    "tagIds": {
      "type": "array",
      "description": "Array of tag IDs to add to the image",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "additionalProperties": false
}
