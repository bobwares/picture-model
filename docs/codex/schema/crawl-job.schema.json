{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:picture-model:schema:crawl-job:v1",
  "title": "CrawlJob",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "drive_id",
    "root_path",
    "status",
    "start_time",
    "files_processed",
    "files_added",
    "files_updated",
    "files_deleted",
    "is_incremental"
  ],
  "properties": {
    "id": { "type": "string" },
    "drive_id": { "type": "string" },
    "root_path": { "type": "string", "minLength": 1 },
    "status": {
      "type": "string",
      "enum": ["PENDING", "IN_PROGRESS", "PAUSED", "COMPLETED", "FAILED", "CANCELLED"]
    },
    "start_time": { "type": "string", "format": "date-time" },
    "end_time": { "type": "string", "format": "date-time" },
    "files_processed": { "type": "integer", "minimum": 0 },
    "files_added": { "type": "integer", "minimum": 0 },
    "files_updated": { "type": "integer", "minimum": 0 },
    "files_deleted": { "type": "integer", "minimum": 0 },
    "current_path": { "type": "string" },
    "errors": { "type": "array", "items": { "type": "string" } },
    "is_incremental": { "type": "boolean" }
  }
}
