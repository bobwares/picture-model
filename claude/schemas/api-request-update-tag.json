{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://picturemodel.com/schemas/api-request-update-tag.json",
  "title": "UpdateTagRequest",
  "description": "Request body for updating an existing tag",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Updated tag name",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^[a-zA-Z0-9\\s_-]+$"
    },
    "color": {
      "type": "string",
      "description": "Updated hex color code",
      "pattern": "^#[0-9A-Fa-f]{6}$"
    }
  },
  "additionalProperties": false
}
